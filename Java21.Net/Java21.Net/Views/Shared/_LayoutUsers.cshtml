                        <li><a href="/about">关于</a></li>
                    </ul>
                </nav>
                <script>
                    $("span.menu").click(function () {
                       $("ul.res").slideToggle("slow", function () {
                           // Animation complete.
                       });
                   });
                </script>
            </div>
            <div class="clearfix"></div>
