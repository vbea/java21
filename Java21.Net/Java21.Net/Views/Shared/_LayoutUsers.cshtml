    <script src="/Script/jquery.min.js"></script>
    <script type="text/javascript" src="/Script/jquery-1.4.1.min.js"></script>
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }</script>
    <script src="/Script/move-top.js"></script>
    <script src="/Script/easing.js"></script>
    <title>@ViewBag.Title</title>
    <script type="text/javascript">
        var menu_s = false;
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });

            $("#id_user,#user_menu").mouseover(function (e) {
                if (menu_s)
                    return;
                $("#user_menu").slideDown("fast", function () {
                    menu_s = true;
                });
                //$("#user_menu").show();
                $("#user_menu").css("left", ($("#id_user").offset().left - 30) + "px");
                $("#user_menu").css("top", ($("#id_user").offset().top + 30) + "px");
            });

            $("#user_menu").mouseleave(function (e) {
                if (menu_s) {
                    $("#user_menu").slideUp(500, function () {
                        menu_s = false;
                    });
                }
            });

        }).click(function () {
            if (menu_s) {
                $("#user_menu").slideUp(500, function () {
                    menu_s = false;
                });
            }
        });
    </script>
    @RenderSection("head", false)
</head>
