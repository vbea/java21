<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="?attr/titleColor"
    android:clipToPadding="true">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:gravity="center_horizontal">
		<include layout="@layout/java_tool"/>
		<ImageView
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_marginTop="30dp"
			android:src="@mipmap/ic_launcher_round"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/app_name"
			android:textColor="?attr/textPrimary"
			android:gravity="center_vertical"
			android:textSize="20sp"
			android:layout_marginTop="5dp"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/version"
			android:textColor="#808080"
			android:gravity="center_vertical"
			android:textSize="12sp"
			android:layout_marginTop="5dp"/>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="10dp"
				android:textSize="15sp"
				android:textColor="?attr/colorPrimary"
				android:text="软件信息"/>
			<TextView
				android:id="@+id/about_new"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_menu"
				android:padding="10dp"
				android:textSize="15sp"
				android:textColor="?attr/colorPrimary"
				android:text="新版特性"/>
		</TableRow>
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="?attr/colorAccent"/>
		<TableRow
			android:id="@+id/tab_actStatus"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingBottom="5dp"
			android:paddingTop="5dp"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="?attr/textPrimary"
				android:text="软件状态："/>
			<TextView
				android:id="@+id/about_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textSize="14sp"
				android:textColor="?attr/colorAccent"
				android:background="@drawable/btn_normal"
				android:paddingTop="2dp"
				android:paddingBottom="2dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:text="未激活，点此激活"
				android:singleLine="true"/>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingBottom="5dp"
			android:paddingTop="5dp"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="?attr/textPrimary"
				android:text="安装时间："/>
			<TextView
				android:id="@+id/about_install"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textSize="14sp"
				android:textColor="?attr/colorAccent"
				android:text="2017-01-01"
				android:singleLine="true"/>
		</TableRow>
		<LinearLayout
			android:id="@+id/abt_actLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="gone">
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingBottom="3dp"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="?attr/textPrimary"
				android:text="激活时间："/>
			<TextView
				android:id="@+id/about_active"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textSize="14sp"
				android:textColor="?attr/colorAccent"
				android:text="2017-01-01"
				android:singleLine="true"/>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingBottom="3dp"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="?attr/textPrimary"
				android:text="验证方式："/>
			<TextView
				android:id="@+id/about_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textSize="14sp"
				android:textColor="?attr/colorAccent"
				android:text="手动注册"
				android:singleLine="true"/>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="?attr/textPrimary"
				android:text="　序列号："/>
			<TextView
				android:id="@+id/about_key"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textSize="14sp"
				android:textColor="?attr/colorAccent"
				android:text="JavaKey"
				android:singleLine="true"
				android:textIsSelectable="true"/>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="5dp"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="?attr/textPrimary"
				android:text="激活凭证："/>
			<TextView
				android:id="@+id/about_scrip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textSize="14sp"
				android:textColor="?attr/colorAccent"
				android:singleLine="true"
				android:ellipsize="middle"
				android:text="Java"/>
		</TableRow>
		</LinearLayout>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="5dp"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="?attr/textPrimary"
				android:text="安卓版本："/>
			<TextView
				android:id="@+id/about_android"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textSize="14sp"
				android:textColor="?attr/colorAccent"
				android:singleLine="true"
				android:ellipsize="middle"
				android:text="8.0"/>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="5dp"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="?attr/textPrimary"
				android:text="安装渠道："/>
			<TextView
				android:id="@+id/about_channel"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textSize="14sp"
				android:textColor="?attr/colorAccent"
				android:singleLine="true"
				android:ellipsize="middle"
				android:text="VBES"/>
		</TableRow>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingTop="5dp"
			android:gravity="center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="14sp"
				android:textColor="?attr/textPrimary"
				android:text="证书校验："/>
			<TextView
				android:id="@+id/about_sign"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textSize="14sp"
				android:textColor="?attr/colorAccent"
				android:singleLine="true"
				android:ellipsize="middle"
				android:text="true"/>
		</TableRow>
	</LinearLayout>
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:paddingBottom="5dp"
		android:text="@string/copyright"
		android:textColor="#808080"
		android:gravity="center"
		android:textSize="10sp"/>
</RelativeLayout>

