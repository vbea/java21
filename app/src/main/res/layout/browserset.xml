<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="?attr/titleColor">
	<include layout="@layout/java_tool"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView
				android:id="@+id/btnSetHome"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="主页设置"
				android:padding="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu"
				android:gravity="start|center_vertical"
				android:textColor="?attr/textPrimary"
				android:textSize="16sp"/>
			<LinearLayout
				android:id="@+id/btnSetSearch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="搜索引擎"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"/>
				<TextView
					android:id="@+id/txt_webSearch"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="百度"
					android:textColor="?attr/colorAccent"
					android:textSize="14sp"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/btnSetUa"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_menu"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:padding="@dimen/activity_vertical_margin">
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="浏览器UA标识"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"/>
				<TextView
					android:id="@+id/txt_webUa"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Android"
					android:textColor="?attr/colorAccent"
					android:textSize="14sp"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/btnSetSavePath"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_menu"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:padding="@dimen/activity_vertical_margin">
				<TextView
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:text="图片保存位置"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"/>
				<TextView
					android:id="@+id/txt_webSavePath"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="?attr/colorAccent"
					android:textSize="14sp"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
