<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="?attr/titleColor"
    android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:clipToPadding="true">
	<RelativeLayout
		android:id="@+id/draw_user"
		android:layout_width="fill_parent"
		android:layout_height="214dp"
		android:transitionName="share_user"
		android:background="?attr/colorPrimary"
		android:clickable="true">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:paddingTop="10dp"
			android:gravity="center"
			android:orientation="vertical">
    	<ImageView
			android:id="@+id/img_head"
			android:layout_width="85dp"
			android:layout_height="85dp"
			android:layout_margin="5dp"
			android:transitionName="icon_pre"
			android:src="@mipmap/head"/>
		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:paddingTop="3dp">
			<TextView
				android:id="@+id/draw_isVIP"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="3dp"
				android:layout_marginTop="1dp"
				android:background="@drawable/ic_bg_vip"
				android:singleLine="true"
				android:textColor="@color/white"
				android:textSize="9sp"
				android:paddingLeft="3dp"
				android:paddingRight="3dp"
				android:visibility="gone"/>
			<TextView
				android:id="@+id/draw_txtName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:transitionName="share_nick"
				android:textColor="@color/white"
				android:textSize="16sp"
				android:text="请登录"/>
		</TableRow>
		</LinearLayout>
		<TextView
			android:id="@+id/draw_txtMark"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:layout_alignParentBottom="true"
			android:singleLine="true"
			android:gravity="center"
			android:textColor="@color/white"
			android:textSize="12sp"
			android:text=""/>
	</RelativeLayout>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scrollbars="none">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/draw_item1"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_marginTop="16dp"
				android:background="@drawable/btn_menu"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:onClick="goTheme"
				android:paddingEnd="16dp"
				android:paddingStart="16dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_theme"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:background="@null"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/setheme"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"
					android:singleLine="true"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/drawer_music"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goMusic"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp"
				android:visibility="gone">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_music"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="60dp"
					android:layout_weight="1"
					android:background="@null"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/more"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"
					android:singleLine="true"/>
				<TextView
					android:id="@+id/main_showAudioCode"
					android:layout_width="wrap_content"
					android:layout_height="60dp"
					android:background="@null"
					android:gravity="center_vertical"
					android:text=""
					android:textColor="?attr/colorAccent"
					android:textSize="12sp" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goAPI"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_api"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:background="@null"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/apidoc"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"
					android:singleLine="true"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goBrowser"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_browser"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/browser"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp" 
					android:singleLine="true"/>
			</LinearLayout>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="0.5dp"
				android:background="@color/dividers"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"/>
			<TextView
				android:id="@+id/draw_txtTool"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dp"
				android:layout_marginBottom="5dp"
				android:textColor="?attr/colorAccent"
				android:textSize="12sp"
				android:text="实用工具"
				android:singleLine="true"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goScanner"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_scan"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:background="@null"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/activity_qr_scan"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"
					android:singleLine="true"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goEditor"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_place"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:background="@null"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/textEditor"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"
					android:singleLine="true"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/drawer_codeEditor"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goCodeEditor"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_code"
					android:tint="?attr/colorPrimary" />
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:background="@null"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/activity_admin"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"
					android:singleLine="true"/>
			</LinearLayout>
			<!--LinearLayout
				android:id="@+id/drawer_wifiLayout"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goQQMessage"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_wifi"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/wifiview"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp" 
					android:singleLine="true"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/drawer_smsLayout"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goSms"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp"
				android:visibility="gone">
				<ImageView
					android:id="@+id/draw_image8"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_warsms"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/smsplugin"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"
					android:singleLine="true"/>
			</LinearLayout-->
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="0.5dp"
				android:background="@color/dividers"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goSetting"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_setting"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:background="@null"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/settings"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"
					android:singleLine="true"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/drawer_helpLayout"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goHelp"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_help"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:background="@null"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="@string/help"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"
					android:singleLine="true"/>
			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:background="@drawable/btn_menu"
				android:clickable="true"
				android:gravity="center_vertical"
				android:onClick="goBack"
				android:orientation="horizontal"
				android:paddingEnd="16dp"
				android:paddingStart="16dp">
				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:src="@mipmap/ic_exit"
					android:tint="?attr/colorPrimary"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:background="@null"
					android:gravity="center_vertical"
					android:paddingEnd="0dp"
					android:paddingStart="16dp"
					android:text="退出"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>

