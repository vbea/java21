<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:clipToPadding="false"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_half_margin"
	android:background="?attr/titleColor">
	<include layout="@layout/java_tool"/>
	<EditText
		android:id="@+id/txt_musicOld"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:maxHeight="100dp"
		android:padding="8dp"
		android:gravity="start"
		android:hint="格式:AB[C1]H(IC)"
		android:background="@null"/>
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:layout_margin="3dp"
		android:background="?attr/colorAccent"/>
	<EditText
		android:id="@+id/txt_musicNew"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:maxHeight="100dp"
		android:padding="8dp"
		android:gravity="start"
		android:hint="转换后的格式:A,B,C1,H,I-C"
		android:background="@null"/>
	<Button
		android:id="@+id/btn_musicTrans"
		android:layout_width="fill_parent"
		android:layout_height="50dp"
		android:background="@drawable/btn_button"
		android:layout_margin="10dp"
		android:textColor="@color/white"
		android:textSize="18sp"
		android:text="转换"/>
</LinearLayout>

