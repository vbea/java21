<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/titleColor"
    android:clipToPadding="true">
    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/zBarview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:qrcv_animTime="0"
        app:qrcv_borderColor="@color/transparent"
        app:qrcv_borderSize="1dp"
        app:qrcv_cornerColor="?attr/colorPrimary"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="0dp"
        app:qrcv_maskColor="@color/transparent"
        app:qrcv_rectWidth="200dp"
        app:qrcv_scanLineColor="?attr/colorPrimary"
        app:qrcv_verticalBias="0.5"
        app:qrcv_isAutoZoom="true"
        app:qrcv_isScanLineReverse="false"
        app:qrcv_isShowDefaultGridScanLineDrawable="true"
        app:qrcv_isShowLocationPoint="true"/>
    <!--cn.bingoogolapple.qrcode.zbar.ZBarView
        android:id="@+id/zBarview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:qrcv_animTime="0"
        app:qrcv_borderColor="@color/transparent"
        app:qrcv_borderSize="1dp"
        app:qrcv_cornerColor="?attr/colorPrimary"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="0dp"
        app:qrcv_maskColor="@color/transparent"
        app:qrcv_rectWidth="200dp"
        app:qrcv_scanLineColor="?attr/colorPrimary"
        app:qrcv_verticalBias="0.5"
        app:qrcv_isAutoZoom="true"
        app:qrcv_isScanLineReverse="false"
        app:qrcv_isShowDefaultGridScanLineDrawable="true"
        app:qrcv_isShowLocationPoint="true"/-->
    <RelativeLayout
        android:id="@+id/qr_gallery"
        android:layout_width="@dimen/margin_48"
        android:layout_height="@dimen/margin_48"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_circle_black"
        android:layout_margin="@dimen/activity_double_margin">
        <ImageView
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_picture"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/qr_gallery"
        android:textColor="#70FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:text="扫二维码/条码"/>
    <include layout="@layout/java_tool"/>
</RelativeLayout>