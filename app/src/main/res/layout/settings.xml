<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
    android:clipToPadding="false"
	android:background="?attr/titleColor">
	<include layout="@layout/java_tool"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<!--LinearLayout
				android:id="@+id/btnSetstate"
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:background="@drawable/btn_menu"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:text="软件状态"
					android:gravity="start|center_vertical"
					android:paddingLeft="20dp"
					android:paddingRight="15dp"
					android:textColor="?attr/textPrimary"
					android:textSize="17sp"/>
				<TextView
					android:id="@+id/txt_setState"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="试用中"
					android:gravity="start|center_vertical"
					android:paddingRight="15dp"
					android:textColor="?attr/colorAccent"
					android:textSize="14sp"/>
			</LinearLayout-->
			<TextView
				android:id="@+id/btn_setTheme"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/setheme"
				android:background="@drawable/btn_menu"
				android:gravity="start|center_vertical"
				android:padding="@dimen/activity_vertical_margin"
				android:textColor="?attr/textPrimary"
				android:textSize="16sp"/>
			<TextView
				android:id="@+id/btn_setImage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/setimage"
				android:background="@drawable/btn_menu"
				android:gravity="start|center_vertical"
				android:padding="@dimen/activity_vertical_margin"
				android:textColor="?attr/textPrimary"
				android:textSize="16sp"/>
			<TextView
				android:id="@+id/btn_setTextsize"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="字体大小"
				android:background="@drawable/btn_menu"
				android:gravity="start|center_vertical"
				android:padding="@dimen/activity_vertical_margin"
				android:textColor="?attr/textPrimary"
				android:textSize="16sp"/>
			<LinearLayout
				android:id="@+id/btnSetmusic"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_normal"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="音乐加载"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"/>
				<Switch
					android:id="@+id/swtMusic"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/btnSettips"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_normal"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="消息通知"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"/>
				<Switch
					android:id="@+id/swtTips"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			</LinearLayout>
			<RelativeLayout
				android:id="@+id/btn_setClearCache"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="清除网页缓存"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"/>
				<TextView
					android:id="@+id/txt_setCacheSize"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:textSize="14sp"
					android:text="N/A"
					android:textColor="?attr/colorAccent"/>
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/btn_setClearCacheImage"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="清除图片缓存"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"/>
				<TextView
					android:id="@+id/txt_setCacheImageSize"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:textSize="14sp"
					android:text="N/A"
					android:textColor="?attr/colorAccent"/>
			</RelativeLayout>
			<TextView
				android:id="@+id/btn_setHistory"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="清除阅读历史记录"
				android:background="@drawable/btn_menu"
				android:gravity="start|center_vertical"
				android:padding="@dimen/activity_vertical_margin"
				android:textColor="?attr/textPrimary"
				android:textSize="16sp"/>
			<TextView
				android:id="@+id/btn_setScore"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="给软件评分"
				android:background="@drawable/btn_menu"
				android:gravity="start|center_vertical"
				android:padding="@dimen/activity_vertical_margin"
				android:textColor="?attr/textPrimary"
				android:textSize="16sp"
				android:enabled="false"/>
			<TextView
				android:id="@+id/btn_setJoin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/aboutus"
				android:background="@drawable/btn_menu"
				android:gravity="start|center_vertical"
				android:padding="@dimen/activity_vertical_margin"
				android:textColor="?attr/textPrimary"
				android:textSize="16sp"
				android:enabled="false"/>
			<TextView
				android:id="@+id/btn_setHelp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/feedback"
				android:background="@drawable/btn_menu"
				android:gravity="start|center_vertical"
				android:padding="@dimen/activity_vertical_margin"
				android:textColor="?attr/textPrimary"
				android:textSize="16sp"
				android:enabled="false"/>
			<TextView
				android:id="@+id/btn_setDonate"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/donate"
				android:background="@drawable/btn_menu"
				android:gravity="start|center_vertical"
				android:padding="@dimen/activity_vertical_margin"
				android:textColor="?attr/textPrimary"
				android:textSize="16sp"
				android:visibility="gone"/>
			<LinearLayout
				android:id="@+id/btnSetadv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_normal"
				android:padding="@dimen/activity_vertical_margin"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:visibility="gone">
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="去广告"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"/>
				<Switch
					android:id="@+id/swtAdv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/btnSetadvwel"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_normal"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:padding="@dimen/activity_vertical_margin"
				android:visibility="gone">
				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="显示开屏广告"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"/>
				<Switch
					android:id="@+id/swtAdvwel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/btnUpdate"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/btn_menu"
				android:padding="@dimen/activity_vertical_margin"
				android:orientation="horizontal">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:text="@string/about"
					android:textColor="?attr/textPrimary"
					android:textSize="16sp"/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>

