<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">
	<include layout="@layout/java_tool"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="16dp"
		android:background="?attr/titleColor">
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp">
			<EditText
				android:id="@+id/signUsername"
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:textSize="16sp"
				android:maxLength="11"
				android:singleLine="true"
				android:hint="@string/hint_user"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				android:id="@+id/signPassword"
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:textSize="16sp"
				android:maxLength="16"
				android:singleLine="true"
				android:hint="@string/java_psd"
				android:inputType="textPassword"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				android:id="@+id/signQuerPass"
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:textSize="16sp"
				android:maxLength="16"
				android:singleLine="true"
				android:hint="@string/java_pasd"
				android:inputType="textPassword"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				android:id="@+id/signEmail"
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:singleLine="true"
				android:textSize="16sp"
				android:hint="@string/java_email"/>
		</android.support.design.widget.TextInputLayout>
		<android.support.design.widget.TextInputLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<EditText
				android:id="@+id/signNick"
				android:layout_width="match_parent"
				android:layout_height="fill_parent"
				android:maxLength="15"
				android:singleLine="true"
				android:textSize="16sp"
				android:hint="@string/java_nick"/>
		</android.support.design.widget.TextInputLayout>
		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:gravity="center_vertical"
			android:layout_marginBottom="16dp">
			<RadioGroup
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:checkedButton="@+id/rdbMale"
				android:gravity="center"
				android:contextDescription="@string/java_gender">
				<RadioButton
					android:id="@+id/rdbMale"
					android:layout_width="50dp"
					android:layout_height="wrap_content"
					android:text="男"/>
				<RadioButton
					android:layout_width="50dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:text="女"/>
			</RadioGroup>
		</TableRow>
		<Button
			android:id="@+id/btnSign"
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:background="@drawable/btn_button"
			android:textColor="@color/white"
			android:textSize="18sp"
			android:text="@string/java_sign"/>
	</LinearLayout>
</LinearLayout>

