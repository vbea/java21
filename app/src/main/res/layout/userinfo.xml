<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="?attr/titleColor">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true"
		android:background="?attr/titleColor">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
			android:transitionName="share_user"
			app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
			app:expandedTitleMarginStart="5dp"
            app:titleEnabled="false"
			app:toolbarId="@id/toolbar">
			<RelativeLayout
                android:id="@+id/user_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
				android:background="?attr/titleColor">
				<LinearLayout
					android:id="@+id/topLayout"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingTop="10dp"
					android:gravity="center"
					android:orientation="vertical">
					<ImageView
						android:id="@+id/user_icon"
						android:layout_width="85dp"
						android:layout_height="85dp"
						android:layout_margin="5dp"
						android:transitionName="icon_pre"
						android:src="@mipmap/head"/>
					<TextView
						android:id="@+id/user_topName"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:transitionName="share_nick"
						android:paddingTop="3dp"
						android:singleLine="true"
						android:textColor="@color/white"
						android:textSize="16sp"
						android:text="请登录"/>
				</LinearLayout>
			</RelativeLayout>
            <android.support.v7.widget.Toolbar
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				app:navigationIcon="@mipmap/ic_back"
				app:layout_collapseMode="pin"
				app:theme="?attr/actionStyle"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
	<android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
			android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
			<TableRow
				android:id="@+id/btn_info_user"
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"
					android:text="@string/java_person"/>
				<TextView
					android:id="@+id/info_level"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:singleLine="true"
					android:textColor="?attr/colorAccent"/>
			</TableRow>
			<TableRow
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"
					android:text="@string/java_role"/>
				<TextView
					android:id="@+id/info_role"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:singleLine="true"
					android:textColor="?attr/colorAccent"/>
			</TableRow>
			<TableRow
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"
					android:text="@string/info_gender"/>
				<TextView
					android:id="@+id/info_gender"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:singleLine="true"
					android:textColor="?attr/colorAccent"/>
			</TableRow>
			<TableRow
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"
					android:text="@string/java_age"/>
				<TextView
					android:id="@+id/info_birthday"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:singleLine="true"
					android:textColor="?attr/colorAccent"/>
			</TableRow>
			<TableRow
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"
					android:text="@string/info_address"/>
				<TextView
					android:id="@+id/info_address"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:singleLine="true"
					android:textColor="?attr/colorAccent"/>
			</TableRow>
			<TableRow
				android:id="@+id/btn_info_mobile"
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"
					android:text="@string/java_mobile"/>
				<TextView
					android:id="@+id/info_mobile"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:singleLine="true"
					android:textColor="?attr/colorAccent"/>
			</TableRow>
			<TableRow
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"
					android:text="@string/java_emails"/>
				<TextView
					android:id="@+id/info_email"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:singleLine="true"
					android:textColor="?attr/colorAccent"/>
			</TableRow>
			<TableRow
				android:id="@+id/btn_info_qq"
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"
					android:text="@string/java_qq"/>
				<TextView
					android:id="@+id/info_qq"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:singleLine="true"
					android:textColor="?attr/colorAccent"/>
			</TableRow>
			<TableRow
				android:id="@+id/btn_info_wx"
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"
					android:text="@string/java_wx"/>
				<TextView
					android:id="@+id/info_wx"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:textSize="14sp"
					android:singleLine="true"
					android:textColor="?attr/colorAccent"/>
			</TableRow>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingLeft="@dimen/activity_vertical_margin"
				android:paddingRight="@dimen/activity_vertical_margin"
				android:minHeight="56dp"
				android:maxHeight="80dp"
				android:orientation="vertical"
				android:background="@drawable/btn_menu">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="start"
					android:textSize="16sp"
					android:textColor="?attr/textPrimary"
					android:text="@string/java_mark"/>
				<TextView
					android:id="@+id/info_mark"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:paddingTop="@dimen/activity_half_margin"
					android:gravity="start"
					android:textSize="14sp"
					android:textColor="?attr/colorAccent"/>
			</LinearLayout>
			<Button
				android:id="@+id/btn_logout"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:layout_margin="@dimen/activity_vertical_margin"
				android:background="@drawable/btn_red"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:text="@string/logout"/>
		</LinearLayout>
	</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
